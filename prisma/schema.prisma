// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  notes     Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  title     String?   @db.VarChar(255) @default("New Note")
  code      String?   @db.Text() @default("")
  text      String?  @default("{\"ops\": []}")   //save as string because Quill Delta is technically a subset of JSON and underneath the hood is not JSON
  owner    User?    @relation(fields: [ownerId], references: [id])
  ownerId  Int?
}

enum Role {
  USER
  ADMIN
}